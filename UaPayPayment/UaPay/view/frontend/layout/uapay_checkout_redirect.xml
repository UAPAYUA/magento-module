<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>UAPAY payment</title>
    </head>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">UAPAY payment</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="UaPayPayment\UaPay\Block\Redirect" name="uapay.checkout.redirect"
                   template="UaPayPayment_UaPay::html/form.phtml" cacheable="false">
            </block>
        </referenceContainer>
    </body>
</page>
